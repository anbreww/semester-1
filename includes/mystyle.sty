\renewcommand{\MakeUppercase}[1]{\color{RawSienna}\textsf{#1}}

\renewcommand{\abstractname}{\color{blue}Abstract}
\renewcommand{\figurename}{\color{Sepia}Figure}
\renewcommand{\tablename}{\color{Sepia}Table}

